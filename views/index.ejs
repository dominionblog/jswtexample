<%- include("./partials/header.ejs") %> 
<div class="container">
    <% if (typeof success == "string" || success)  { %>
        <div class="alert alert-success">
            <h1>Success!</h1>
            <p><%= success %></p>
        </div>
    <% } %>  
    <% if (typeof err == "string" || err) { %> 
        <div class="alert alert-danger">
            <h1>An Error Occured</h1>
            <p><%= err %></p>
        </div>
    <% } %> 
    
    <div class="row">
        <div class="col">
            <form class="create-account-div subdiv" method="POST" action="/auth/register">
                <h3>Create an Account</h3>
                <input class="username" name="username" type="text" placeholder="Username">
                <input class="password" name="password" type="password" placeholder="Password">
                <button class="btn btn-primary" type="submit">Create</button>
            </form>
        </div>
        <div class="col">
            <form class="login-account-div subdiv" method="POST" action="/auth/login">
                <h3>Log In</h3>
                <input name="username" type="text" placeholder="Username">
                <input name="password" type="password" placeholder="Password">
                <button class="btn btn-primary" type="submit">Log In</button>
            </form>
        </div>
    </div>
</div>
<%- include("./partials/footer.ejs") %> 